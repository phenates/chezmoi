#!/bin/bash

{{ if (and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "debian" "ubuntu")) -}}
set -e # -e: exit on error

# Variables
NOCOLOR=$(tput sgr0)
CYAN=$(tput setaf 6)
GREEN=$(tput setaf 2)
RED=$(tput setaf 1)

package_url={{ .chezmoi_package }}

# Header
echo -e ""
echo -e $CYAN"###### chezmoi package installalation #####"$NOCOLOR

# install package
wget -q -O /tmp/chezmoi_package.deb $package_url
sudo apt install /tmp/chezmoi_package.deb -y

# remove dowmloaded file and chezmoi binary
# rm ~/chezmoi_package.deb
rm -r ~/.local/share/chezmoi

echo -e ""
{{ end -}}
